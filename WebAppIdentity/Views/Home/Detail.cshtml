@model Recipe
@{
    ViewBag.Title = "Recipe Detail";
}

<div>
    <div class="card">
        <div class="card-header text-center">
            <h3>RecipeId:@Model.RecipeId</h3>
        </div>
        <div class="card-body text-center">
            <h4>RecipeName:@Model.Name</h4>
            <h4>IsVegan:@Model.IsVegan</h4>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Back" class="btn btn-primary">返回</a>
            <a href="#" class="btn btn-primary">编辑</a>
            <a href="#" class="btn btn-danger">删除</a>
        </div>
    </div>
</div>

